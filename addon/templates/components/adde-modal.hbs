{{#adde-modal-container
  size=size
  translucentOverlay=translucentOverlay
  clickOutsideToClose=clickOutsideToClose
  closeOnEscape=closeOnEscape
  rootElementSelector=rootElementSelector
  onClickOverlay='sendClickOverlay'
  onClose='sendClose'
}}

  {{adde-modal-header 
    onClose='sendClose'
    headerText=headerText
    showCloseButton=showCloseButton
  }}

  {{#adde-modal-body}}
    {{yield}}
  {{/adde-modal-body}}

  {{#if showFooter}}
    {{adde-modal-footer
      onConfirm='sendConfirm'
      onCancel='sendCancel'
      confirmText=confirmText
      cancelText=cancelText
    }}
  {{/if}}
  
{{/adde-modal-container}}
